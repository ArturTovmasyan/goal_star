<h1>{{ 'forgot' | trans({}, 'FOSUserBundle') | upper }}</h1>

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal">

    {% if invalid_username is defined %}
        <p class="error text-center">
            <i class="fa fa-exclamation-triangle"></i>
            {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}
        </p>
    {% endif %}

    <div class="form-group row">
        <label for="username" class="col-sm-5 col-md-6 control-label">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="col-sm-7 col-md-6">
            <input type="text" class="form-control" name="username" id="username" required="required"/>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-offset-6 col-sm-6">
            <input type="submit" value="{{ 'resetting.request.send'|trans({}, 'FOSUserBundle') }}" class="btn btn-blue"/>
        </div>
    </div>
    <hr/>

    <a href="{{ path('fos_user_security_login') }}">{{ 'resetting.request.text' | trans({}, 'FOSUserBundle') | upper }}</a>
</form>
