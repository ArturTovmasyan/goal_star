{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('app/bower_components/bootstrap-tokenfield/dist/bootstrap-tokenfield.js') }}"></script>

{% endblock %}

{% block  stylesheets %}
    {{ parent() }}

    <link href="{{ asset('bundles/app/css/admin.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('app/bower_components/bootstrap-tokenfield/dist/css/bootstrap-tokenfield.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('app/bower_components/bootstrap-tokenfield/dist/css/tokenfield-typeahead.min.css') }}" type="text/css" rel="stylesheet">

{% endblock %}


{% block form %}

    {{ parent() }}

    <script>
        $('.tokenfield').tokenfield({
            autocomplete: {
                minLength: 2,
                source: '/api/v1.0/tag',
                delay: 100
            },
            showAutocompleteOnFocus: true
        })
    </script>
{% endblock %}