{#{% extends '::base.html.twig' %}#}
{% extends "::amp.html.twig" %}

{% block title %}{{ 'meta.title.contact'|trans({}, 'messages') }}{% endblock %}
{% block metaDescription %}{{ 'meta.description.contact'|trans({}, 'messages') }}{% endblock %}

{#{% block header %}#}
    {#{% include 'AppBundle:Blocks:header.html.twig' %}#}
{#{% endblock %}#}

{% block content %}
    <div id="contact">

        <div class="bg-white">
            <div class="contact-space">
            <h1 class="text-center">{{ 'contact.contact'|trans({}, 'messages') }}</h1>

            <p class="text-center">{{ 'contact.text'|trans({}, 'messages') | capitalize }}</p>

                <div id="error-text" class="text-center"></div>

                <div class="text-center">

                    <form id="contact-form" class="form-horizontal" method="post"
                          action-xhr="{{ host ~ path('contact') }}"
                          target="_top">

                        <div>
                            {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div>
                            {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div>
                            {{ form_label(form.subject, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.subject) }}
                        </div>

                        <div>
                            {{ form_label(form.userName, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.userName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userName) }}
                        </div>


                        <div>
                            {{ form_label(form.device, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.device, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.device) }}
                        </div>

                        <div>
                            {{ form_label(form.message, null, {'label_attr': {'class': 'control-label message-label'}}) }}
                            {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.message) }}
                        </div>

                        <div class="contact-button text-right">
                            <button type="submit" class="btn btn-blue">{{ 'contact.form.send'| trans | capitalize }}</button>
                        </div>

                        {#<div class="form-loading sr-only" style="text-align: center;">#}
                            {#<img src="{{ asset('bundles/app/images/loading.gif') }}"/>#}
                        {#</div>#}

                        <div submit-success class="email-notification sr-only">
                            <template type="amp-mustache">
                                <p class="text-center">Thank you! Your message has been successfully sent!</p>
                            </template>
                        </div>
                        <div submit-error class="email-notification sr-only">
                            <template type="amp-mustache">
                                <p class="text-center">Error! Your message has not been sent!</p>
                            </template>
                        </div>
                        {{ form_widget(form._token) }}
                    </form>

                    {#<div class="email-notification sr-only">#}
                        {#<p class="text-center">Thank you! Your message has been successfully sent!</p>#}
                    {#</div>#}

                </div>

                <div id="office-information">

                    <hr />

                    <h2>{{ 'contact.main_office'|trans({}, 'messages') | capitalize }}</h2>

                    <p>
                        <strong>{{ 'contact.address'|trans({}, 'messages') | capitalize }}</strong>
                        {{ 'contact.address_text'|trans({}, 'messages') | capitalize }}
                    </p>

                    <p>
                        <strong>{{ 'contact.email'|trans({}, 'messages') | capitalize }}</strong>
                        <a href="mailto:info@luvbyrd.com" class="text-blue">{{ 'contact.email_text'|trans({}, 'messages') }}</a>
                    </p>

            </div>
            </div>
        </div>

    </div>

{% endblock %}

