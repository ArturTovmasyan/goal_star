        {#<div class="signup-bg"></div>#}
        {#<img src="{{ asset("bundles/app/images/background.jpg") }}" alt="Sign up Image" class="img-responsive"/>#}
    {#</div>#}

    <div class="container relative">

        <div class="row">

            <div class="col-sm-6 col-md-5">
                {#<figure class="logo-canoe">#}
                    {#<img src="{{ asset('bundles/app/images/logo-canoe.png') }}" alt="LuvByrd" class="img-responsive "/>#}
                {#</figure>#}

                <div class="signin">

                    <ul class="clearfix">
                        <li>{{ 'contentTop.sign'|trans({}, 'messages') | capitalize }}</li>
                        <li>
                            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook'}) }}"></a>
                        </li>
                        <li>
                            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'twitter'}) }}"></a>
                        </li>
                        <li>
                            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'instagram'}) }}"></a>
                        </li>
                    </ul>
                    <hr />

                    <form action="{{ path('fos_user_registration_register') }}" method="post">

                        <div class="form-group">
                            <label class="sr-only" for="Username">{{ 'contentTop.username'|trans({}, 'messages') | capitalize }}</label>
                            <input type="text" data-ng-change="signUpChange()" data-ng-model="username" name="_username" class="form-control" id="Username" required placeholder="Username" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label class="sr-only" for="Email">{{ 'contentTop.email_address'|trans({}, 'messages') | capitalize }}</label>
                            <input type="email" data-ng-keyup="keyUp()" data-ng-model="email" name="_email" class="form-control" id="Email" required placeholder="Email" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label class="sr-only" for="Password">{{ 'contentTop.password'|trans({}, 'messages') | capitalize }}</label>
                            <input type="password" data-ng-change="signUpChange()" data-ng-model="password" name="_password" class="form-control" id="Password" required placeholder="Password" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label class="sr-only" for="Password">{{ 'contentTop.confirm'|trans({}, 'messages') | capitalize }}</label>
                            <input type="password" data-ng-change="signUpChange()" data-ng-model="confirmPassword" name="_password_confirm" class="form-control" id="Confirm" required placeholder="Confirm" autocomplete="off">
                        </div>

                        <div class="checkbox">
                            <label>
                                <input data-ng-change="signUpChange()" data-ng-model="agree" type="checkbox" name="_agree" class="form-control" id="Agree" value="1" required>
                                {#{{ 'contentTop.agree'|trans({}, 'messages') | capitalize }}#}

                                I represent that all entered information is accurate and truthful,
                                that I am at least 18 years of age,
                                and I agree to the LuvByrd
                                <a href="{{ path('page', {'slug' : 'luvbyrd-disclaimer' }) }}#terms-conditions" class="text-blue">Terms and Conditions of Use</a>
                                and
                                <a href="{{ path('page', {'slug' : 'luvbyrd-disclaimer' }) }}#privacy-statement" class="text-blue">{{ 'Privacy Policy'| trans | capitalize }}</a>


                                {#<a href="{{ path('page', {'slug' : 'luvbyrd-disclaimer' }) }}" class="text-blue"> {{ 'contentTop.terms'|trans({}, 'messages') | capitalize }}</a>#}
                                {#<a href="{{ path('page', {'slug' : 'luvbyrd-disclaimer' }) }}#privacy-statement" class="text-blue">{{ 'contentTop.privacy'|trans({}, 'messages') | capitalize }}</a>#}
                            </label>
                        </div>

                        <div class="form-group">
                            <button type="submit" name="sign_up" class="btn btn-pink">{{ 'contentTop.sign_up'|trans({}, 'messages') | upper }}</button>
                            <a data-ng-disabled="disableSignIn" href="{{ path('fos_user_security_login') }}" class="btn btn-blue">{{ 'contentTop.sign_in'|trans({}, 'messages') | upper }}</a>
                        </div>
                    </form>

                </div>
            </div>

            <div class="col-sm-6 col-md-7">
                <div class="row">
                    <div class="col-sm-12 overflow">
                        <span id="mainText" class="text text-left">
                            <p>{{ 'contentTop.textFirst'|trans({}, 'messages') }}</p>
                            <p>{{ 'contentTop.textSecond'|trans({}, 'messages') }}</p>
                        </span>

                        <ul class="apps hidden-xs">
                            <li>
                                <a target="_blank" href="https://itunes.apple.com/us/app/luvbyrd/id1076265929?mt=8" class="app-store-icon-new"></a>
                            </li>
                            <li>
                                <a target="_blank" href="https://play.google.com/store/apps/details?id=com.luvbyrd.luvbyrd" class="google-play-icon-new"></a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>

