{% if admin.isGranted('DELETE', object)  %}

    {% if object.deactivate == true %}
        <a title="Activate user" onclick="return confirm('Are you sure you want to Activate the selected element??')" class="btn btn-small btn btn-sm btn-default" href="{{ path('activate_deactivate', {'id' : object.id } ) }}">
            <i class="glyphicon glyphicon-ok-circle">
            </i>
        </a>
    {% else %}
        <a title="Deactivate user" onclick="return confirm('Are you sure you want to Deactivate the selected element??')" class="btn btn-small btn btn-sm btn-default" href="{{ path('activate_deactivate', {'id' : object.id } ) }}">
            <i class="glyphicon glyphicon-remove-circle">
            </i>
        </a>
    {% endif %}

{% endif %}